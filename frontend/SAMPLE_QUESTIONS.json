      "api_features": {
        "description": "Backend API capabilities and MCP tools",
        "endpoints": [
          {
            "endpoint": "GET /countries",
            "description": "Fetches all 40 countries with their current charts",
            "response": "Array of country objects with tracks"
          },
          {
            "endpoint": "GET /stream",
            "description": "Server-Sent Events stream for real-time chart updates",
            "response": "SSE stream with 'update' events"
          },
          {
            "endpoint": "POST /chat",
            "description": "AI chat endpoint with RAG context",
            "body": {
              "message": "User question",
              "conversation_history": "Last 5 messages"
            },
            "response": "Streaming SSE response with action markers"
          },
          {
            "endpoint": "GET /",
            "description": "Health check and AI status",
            "response": {
              "message": "GlobeBeats API",
              "ai_enabled": true
            }
          }
        ],
        "rag_system": {
          "description": "Retrieval-Augmented Generation using ChromaDB",
          "vector_db": "ChromaDB with all-MiniLM-L6-v2 embeddings",
          "context": "All 40 countries' current chart data",
          "retrieval": "Top 5 most relevant country contexts per query"
        },
        "mcp_tools": {
          "description": "No MCP tools currently implemented - could add:",
          "potential_tools": [
            "get_country_chart(country_code) - Fetch specific country chart",
            "search_tracks(query) - Search across all countries",
            "play_song(country_code, track_name) - Trigger playback",
            "get_trending_artists() - Get global trending artists",
            "compare_countries(country1, country2) - Compare two charts"
          ]
        }
      }
    },
    "action_system": {
      "description": "How the AI triggers frontend actions",
      "format": "[ACTION:TYPE|param1|param2|...]",
      "types": {
        "PLAY_SONG": {
          "format": "[ACTION:PLAY_SONG|country_code|track_name|artist_name]",
          "example": "[ACTION:PLAY_SONG|JP|Zoo|Shakira]",
          "behavior": "Plays specific song from country chart, updates playbar, highlights in track list"
        },
        "SELECT_COUNTRY": {
          "format": "[ACTION:SELECT_COUNTRY|country_code]",
          "example": "[ACTION:SELECT_COUNTRY|BR]",
          "behavior": "Zooms globe to country, opens track list panel"
        },
        "SEARCH_AND_PLAY": {
          "format": "[ACTION:SEARCH_AND_PLAY|search_query]",
          "example": "[ACTION:SEARCH_AND_PLAY|taylor swift]",
          "behavior": "Searches across trending charts, filters track list, plays first match, zooms to country"
        },
        "SEARCH_SPOTIFY": {
          "format": "[ACTION:SEARCH_SPOTIFY|song_name artist_name]",
          "example": "[ACTION:SEARCH_SPOTIFY|Love Story Taylor Swift]",
          "behavior": "Searches Spotify's full catalog, plays first song with preview (if available)"
        },
        "SHOW_SONG_LIST": {
          "format": "[ACTION:SHOW_SONG_LIST|search_query]",
          "example": "[ACTION:SHOW_SONG_LIST|Taylor Swift]",
          "behavior": "Searches Spotify, displays custom playlist/song list, allows browsing and playing individual tracks",
          "use_cases": [
            "Artist playlists (e.g., 'top 10 from Taylor Swift')",
            "Genre playlists (e.g., 'rap top 10', 'rock songs')",
            "Mood playlists (e.g., 'sad songs', 'party music')",
            "Situation playlists (e.g., 'breakup songs', 'workout music')"
          ]
        }
      },
      "parsing": {
        "location": "frontend/src/components/ChatPanel.jsx",
        "regex": "/\\[ACTION:\\w+\\|[^\\]]+\\]/g",
        "execution": "Actions are stripped from display, executed via executeAction()"
      }
    },
    "data_sources": {
      "itunes_api": {
        "rss_feed": "https://rss.applemarketingtools.com/api/v2/{country}/music/most-played/100/songs.json",
        "search_api": "https://itunes.apple.com/search?term={query}&media=music&limit=1",
        "preview_urls": "30-second MP3 previews when available",
        "update_frequency": "Every 10 minutes"
      },
      "countries": [
        "US", "GB", "DE", "FR", "ES", "IT", "BR", "MX", "CA", "AU",
        "JP", "KR", "IN", "SE", "NO", "NL", "PL", "AR", "CL", "CO",
